{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "scripts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "exclude": [
    "node_modules",
    "./node_modules"
  ]
}
